#!/bin/sh

userresources=$HOME/.Xresources
usermodmap=$HOME/.Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps

if [ -f $sysresources ]; then







    xrdb -merge $sysresources

fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then







    xrdb -merge "$userresources"

fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

# start some nice programs

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

# monitors
xrandr \
	--output eDP \
	--brightness 0.6 \
	--primary \
	--set TearFree on \
	--mode 1366x768 \
	--pos 0x0 \
	--output HDMI-A-0 \
	--set TearFree on \
	--mode 1920x1080 \
	--pos 1366x0

# compositor
picom &

clock() {
  printf "^c#A4FFFF^󱑍 "
  printf "^c#A4FFFF^$(date '+%H:%M') ^c#FF66D8^  $(date '+%d/%m/%y')"
}

battery() {
  capacity="$(cat /sys/class/power_supply/BAT0/capacity)"
  printf "^c#F1FA8C^  "
  printf "^c#FFFFA5^$capacity%% "
}

wlan() {
  case "$(cat /sys/class/net/wl*/operstate 2>/dev/null)" in
	up) printf "^c#69ff94^ 1" ;;
	down) printf "^c#ff6e6e^ 0" ;;
  esac
}

eth() {
	case "$(cat /sys/class/net/e*/operstate 2>/dev/null)" in
		up) printf "^c#69ff94^1" ;;
		down) printf "^c#ff6e6e^0" ;;
	esac
}

# wallpaper
while true; do
	morning=8
	night=18
	hour=$(date +%H)

	if [ "$hour" -lt "$night" ] && [ "$hour" -gt "$morning" ]; then
		hours_till_change=$((night - hour))
	else
		hours_till_change=$((morning - hour))
	fi

	wper
	sleep "$((hours_till_change * 3600))"
done &

while true; do
	xsetroot -name "$(battery) $(clock) $(wlan)|$(eth)   "
	sleep 30s
done &

nm-applet &

exec dwm
